---
import '../styles/global.css';
import logo from '../assets/astro.svg'
import type { StringValidation } from 'astro:schema';

type link = {
    href: string;
    ariaLabel: string;
    label: string;
};

const links: link[] = [
    { href: '/', ariaLabel: 'home', label: 'Home' },
    { href: '/about', ariaLabel: 'about', label: 'About' },
    { href: '/blog', ariaLabel: 'blog', label: 'Blog' },
    { href: '/tinnitus', ariaLabel: 'tinnitus', label: 'Tinnitus' },
    { href: '/stories', ariaLabel: 'stories', label: 'Stories' },
    { href: '/services', ariaLabel: 'services', label: 'Services' },
    { href: '/specialists', ariaLabel: 'specialists', label: 'Specialists' },
    { href: '/learn', ariaLabel: 'learn', label: 'Learn' }
];

const current = Astro.url.pathname;
---

<nav>
    <div class="headbar">
        <div class="logobox">
            <a href="/">
                <img src={logo.src} class="logo" alt="MovieRouterLogo" />
            </a>
            <a href="/" style={{ color: 'var(--text-color)' }}>
                <h1 class="caveat">ENT Clinic</h1>
            </a>
        </div>
        <a class="nav-trigger" href="#" aria-label="Toggle navigation"><span class="nav-icon"></span></a>
        <nav class="nav">
            {links.map(link => (
                <a class={link.href == current ? "nav-link active-link" : "nav-link"} href={link.href} aria-label={link.ariaLabel}>{link.label}</a>
            ))}
            <span class="nav-goo"></span>
        </nav>
    </div>
</nav>

<script>
    const trigger = document.querySelector('.nav-trigger');
    trigger?.addEventListener('click', () => {
        document.body.classList.toggle('nav--active');
    });
</script>

<style>
    :root {
        --duration: 300ms;
        --ease: ease-in-out;
        --goo-dur: 300ms;
        --goo-ease: ease-out;
    }
    .caveat {
        font-family: "Caveat", cursive;
        font-optical-sizing: auto;
        font-weight: 600;
        font-style: normal;
        padding-right: 0.5em;
    }

    .headbar {
        position: fixed;
        flex-direction: column;
        left: 0;
        right: 0;
        top: 0;
        width: 100vw;
        width: 100dvw;
        font-family: Arial, Helvetica, sans-serif;
        display: flex;
        background-color: var(--darker-color);
        color: var(--text-color);
        z-index: 150;
    }
    svg {
        position: absolute;
    }

    .logobox {
        display: none;
    }

    .logo {
        height: 4em;
        padding: 1em;
        will-change: filter;
        transition: filter 300ms;
    }
    .logo:hover {
        filter: drop-shadow(0 0 2em #646cffaa);
    }
    
    /* https://codepen.io/adubiel/pen/yyWEVo */
    .nav {
        display: flex;
        flex-direction: column;
        position: absolute;
        width:100%;
        height:100%;
        transform: translateX(100%);    
        z-index:100;
        transition-property: all;
        transition-duration: var(--duration);
    }

    .nav-link {
        font-size:1.3em;
        text-decoration: none;
        color: var(--darker-color);
        opacity:1;
        transition: opacity 300ms var(--ease);
    }
    .nav-trigger {
        display:block;
        position:absolute;
        width:30px;
        height:25px;
        right:10px;
        top:10px;
        z-index:1000; 
    }

    .nav-icon {
        display: inline-block;
        position: relative;
        width:30px;
        height:5px;
        background-color: var(--nav-color);
        transition-property: background-color, transform;
        transition-duration: var(--duration);
    }
    .nav-icon::before, .nav-icon::after {
        content: '';
        position: absolute;
        left: 0;
        width: 30px;
        height: 5px;
        background-color: var(--nav-color);
        transition: margin var(--duration), transform var(--duration);
    }

    .nav-icon::before {
        margin-top: -10px;
    }

    .nav-icon::after {
        margin-top: 10px;
    }
    body.nav--active .nav-icon {
        background: rgba(0,0,0,0.0);
    }
        
    body.nav--active .nav-icon::before {
        margin-top: 0;
        transform: rotate(45deg);
    }

    body.nav--active .nav-icon::after {
        margin-top: 0;
        transform: rotate(-45deg);
    }

    body.nav--active .nav {
        transform: translateX(80%);  
    }

    @media (min-width: 768px) {
        .warning {
            display: block;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }
        .logobox{
            display: flex;
            white-space: nowrap;
        }
        .nav-trigger {
            display: none;
        }
        .nav-link {
            position: relative;
            color: var(--text-color);
            padding: 10px;
            margin-right: 10px;
            background: none;
        }
        .nav-link:before {
            content: '';
            background: linear-gradient(45deg, #ff0000, #ff7300, #fffb00, #48ff00, #00ffd5, #002bff, #7a00ff, #ff00c8, #ff0000);
            position: absolute;
            top: -2px;
            left:-2px;
            background-size: 400%;
            z-index: -1;
            filter: blur(5px);
            width: calc(100% + 4px);
            height: calc(100% + 4px);
            animation: glowing 20s linear infinite;
            opacity: 0;
            transition: opacity .3s ease-in-out;
            border-radius: 10px;
        }
        @keyframes glowing {
            0% { background-position: 400% 0; }
            100% { background-position: 0 0; }
        }
        .nav-link:after {
            z-index: -1;
            position: absolute;
            content: '';
            width: 100%;
            height: 100%;
            left: 0;
            top: 0;
            background: var(--darker-color);
            box-sizing: border-box;
            border: 1px solid hsla(0,0%,0%,1);
            border-radius: 10px;
        }
        .active-link:after {
            border: 2px solid blue;
        }
        .nav-link:active {
            color: #fff;
        }
        .nav-link:active:after {
            background: transparent;
            border: 1px solid transparent;
        }
        .nav-link:hover:before {
            opacity: 1;
        }
        .nav {
            float: right;
            position: static;
            opacity: 1 !important;
            transform: none !important;
            width: auto;
            height: auto;
            background: transparent;
            transition: none;
            flex-direction: row;
            margin-left: auto;
            align-items: center;
            filter:url('#shadowed-goo');
            /*background:rgba(217, 255, 0, 0.2);*/
        }
        .headbar {
            position: absolute;
            flex-direction: row;
        }
    }
</style>
