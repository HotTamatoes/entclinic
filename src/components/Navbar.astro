---
import '../styles/global.css';
import logo from '../assets/astro.svg';
import Stylishbutton from './Stylishbutton.astro';

type link = {
    href: string;
    ariaLabel: string;
    label: string;
};
const aboutLinks: link[] = [
    { href: '/about/your-ears', ariaLabel: 'your ears', label: 'Your Ears' },
    { href: '/about/hearing-loss', ariaLabel: 'hearing loss', label: 'Hearing Loss' },
    { href: '/about/hearing-aids', ariaLabel: 'hearing aids', label: 'Hearing Aids' },
    { href: '/about/funding-options', ariaLabel: 'funding options', label: 'Funding Options' },
    { href: '/about/faq', ariaLabel: 'frequently asked questions', label: 'FAQs' }
]
const tinnitusLinks: link[] = [
    { href: '/tinnitus/learn-about-tinnitus', ariaLabel: 'learn about tinnitus', label: 'Learn About Tinnitus' },
    { href: '/tinnitus/specialist-tinnitus-services', ariaLabel: 'specialist tinnitus services', label: 'Specialist Tinnitus Services' }
]
const links: link[] = [
    { href: '/stories', ariaLabel: 'stories', label: 'Stories' },
    { href: '/services', ariaLabel: 'services', label: 'Services' },
    { href: '/specialists', ariaLabel: 'specialists', label: 'Specialists' },
    { href: '/learn', ariaLabel: 'learn', label: 'Learn' }
];

let current = Astro.url.pathname;
if (current !== '/') { //leave out any trailing slashes
    current = current.endsWith('/') ? current.slice(0,-1) : current;
}
const spleet = current.split('/');
if(spleet.length >= 3) current = spleet[1];
---
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

<nav>
    <div class="headbar">
        <div class="logobox">
            <a href="/">
                <img src={logo.src} class="logo" alt="MovieRouterLogo" />
            </a>
            <a href="/" style={{ color: 'var(--text-color)' }}>
                <h1 class="caveat">ENT Clinic</h1>
            </a>
        </div>
        <a class="nav-trigger" href="#" aria-label="Toggle navigation"><span class="nav-icon"></span></a>
        <nav class="nav">
            <div class="linkbox">
                <a class="nav-link" href='/' aria-label='home'>
                    Home
                    <div class={'/' == current ? "rainbow-underline active-link" : "rainbow-underline"}></div>
                </a>
                <div class="dropdown nav-link">
                    <span class="dropdown-right">About <i class="fa-solid fa-caret-right"></i></span>
                    <span class="dropdown-down">About <i class="fa-solid fa-caret-down"></i></span>
                    <span class="dropdown-up">About <i class="fa-solid fa-caret-up"></i></span>
                    <div class="dropdown-links">
                        <div class="left-arrow"><i class="fa-solid fa-caret-left"></i> Main Menu</div>
                        {aboutLinks.map(link => (
                            <a class="nav-link" href={link.href} aria-label={link.ariaLabel}>
                                {link.label}
                            </a>
                        ))}
                    </div>
                    <div class={ "about" == current ? "rainbow-underline active-link" : "rainbow-underline"}></div>
                </div>
                <div class="dropdown nav-link">
                    <span class="dropdown-right">
                    Tinnitus <i class="fa-solid fa-caret-right"></i></span>
                    <span class="dropdown-down">Tinnitus <i class="fa-solid fa-caret-down"></i></span>
                    <span class="dropdown-up">Tinnitus <i class="fa-solid fa-caret-up"></i></span>
                    <div class="dropdown-links">
                        <div class="left-arrow"><i class="fa-solid fa-caret-left"></i> Main Menu</div>
                        {tinnitusLinks.map(link => (
                            <a class="nav-link" href={link.href} aria-label={link.ariaLabel}>
                                {link.label}
                                <div class={link.href == current ? "rainbow-underline active-link" : "rainbow-underline"}></div>
                            </a>
                        ))}
                    </div>
                    <div class={ "tinnitus" == current ? "rainbow-underline active-link" : "rainbow-underline"}></div>
                </div>
                {links.map(link => (
                    <a class="nav-link" href={link.href} aria-label={link.ariaLabel}>
                        {link.label}
                        <div class={link.href == current ? "rainbow-underline active-link" : "rainbow-underline"}></div>
                    </a>
                ))}
                <div class="sbutton">
                    <Stylishbutton text="Book Now">
                </div>
            </div>
        </nav>
    </div>
</nav>

<script>
    const trigger = document.querySelector('.nav-trigger');
    trigger?.addEventListener('click', () => {
        const active = document.querySelector('.dropdown--active');
        active?.classList.remove('dropdown--active')
        document.body.classList.toggle('nav--active');
    });
</script>
<script>
    const dropdowns = document.querySelectorAll('.dropdown');
    dropdowns.forEach((dropdown) => {
        dropdown.addEventListener('click', () => {
            const active = document.querySelector('.dropdown--active');
            active?.classList.remove('dropdown--active')
            if (active != dropdown) dropdown.classList.add('dropdown--active');
        });
    });
</script>

<style>

    .headbar {
        position: fixed;
        flex-direction: column;
        left: 0;
        right: 0;
        top: 0;
        width: 100dvw;
        font-family: Arial, Helvetica, sans-serif;
        display: flex;
        background-color: var(--darker-color);
        color: var(--text-color);
        z-index: 150;
    }
    svg {
        position: absolute;
    }
    .logobox {
        display: flex;
        white-space: nowrap;
    }

    .logo {
        height: 4em;
        padding: 1em;
        will-change: filter;
        transition: filter 300ms;
    }
    .logo:hover {
        filter: drop-shadow(0 0 2em #646cffaa);
    }
    
    .linkbox {
        display: flex;
        flex-direction: column;
        margin-top: 102.5px;
        background: linear-gradient(45deg,#00ffd5, #002bff, #7a00ff, #ff00c8, #ff0000);
        position: relative;
    }
    .sbutton {
        padding-top: 20px;
        padding-right: auto;
        background: var(--nav-bg-active);
    }

    /* https://codepen.io/adubiel/pen/yyWEVo */
    .nav {
        font-size:1.3em;
        display: flex;
        flex-direction: column;
        position: fixed;
        width:100%;
        transform: translateX(100%);
        transition: all var(--duration) var(--ease);
    }

    .nav-link {
        text-decoration: none;
        padding-left: 20px;
        background-color: var(--nav-bg-active);
        transition: background-color .3s ease-in-out;
    }
    .nav-link:hover {
        background-color: transparent;
        color: var(--darker-color);
    }
    @keyframes glowing {
        0% { background-position: 400% 0; }
        100% { background-position: 0 0; }
    }
    .nav-trigger {
        display:block;
        position:absolute;
        width:30px;
        height:25px;
        right:10px;
        top:10px;
        z-index:1000; 
    }

    .nav-icon {
        display: inline-block;
        position: relative;
        width:30px;
        height:5px;
        background-color: var(--nav-color);
        transition-property: background-color, transform;
        transition-duration: var(--duration);
    }
    .nav-icon::before, .nav-icon::after {
        content: '';
        position: absolute;
        left: 0;
        width: 30px;
        height: 5px;
        background-color: var(--nav-color);
        transition: margin var(--duration), transform var(--duration);
    }

    .nav-icon::before {
        margin-top: -10px;
    }

    .nav-icon::after {
        margin-top: 10px;
    }
    body.nav--active .nav-icon {
        background: hsla(0,0%,0%,0);
    }
        
    body.nav--active .nav-icon::before {
        margin-top: 0;
        transform: rotate(45deg);hsla(0,0%,100%,1);
        background: hsla(0,0%,0%,1);
    }
    body.nav--active .nav-icon::after {
        margin-top: 0;
        transform: rotate(-45deg);
        background: hsla(0,0%,0%,1);
    }
    body.nav--active .nav {
        transform: translateX(59%);  
    }
    .dropdown {
        cursor: pointer;
        user-select: none;
        display: block;
    }
    .dropdown-links {
        display: flex;
        flex-direction: column;
        position: absolute;
        top: 0;
        left: 50%;
        right: 0;
        height: 100%;
        background-color: var(--nav-bg-active);
        transition: left 300ms ease-in-out;
        z-index: 11;
    }
    .dropdown-right {
        display: block;
    }
    .dropdown-down {
        display: none;
    }
    .left-arrow {
        display: block;
        padding-left: 20px;
        background-color: var(--nav-bg-active);
        right: 0;
    }
    .dropdown-up {
        display: none;
    }
    .dropdown--active .dropdown-links {
        left: 0;
    }
    @media (min-width: 768px) {
        .warning {
            display: block;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }
        .nav-trigger {
            display: none;
        }
        .nav-link {
            position: relative;
            color: var(--text-color);
            padding-left: 10px;
            padding-right: 10px;
            padding-top: 3px;
            padding-bottom: 3px;
            margin-right: 10px;
            background: none;
        }
        .nav-link:before {
            content: '';
            background: linear-gradient(45deg, #00ffd5, #002bff, #7a00ff, #ff00c8);
            position: absolute;
            top: -2px;
            left:-2px;
            z-index: -1;
            filter: blur(5px);
            width: calc(100% + 6px);
            height: calc(100% + 6px);
            opacity: 0;
            transition: opacity .3s ease-in-out;
            border-radius: 4px;
        }
        .nav-link:after {
            z-index: -1;
            position: absolute;
            content: '';
            width: 100%;
            height: 100%;
            left: 0;
            top: 0;
            background: var(--darker-color);
            border-radius: 4px;
        }

        .active-link {
            position: absolute;
            top: 0;
            left: 1px;
            background: linear-gradient(45deg, #00ffd5, #002bff, #7a00ff, #ff00c8);
            width: calc(100% - 2px);
            height: calc(100% + 2px);
            z-index: -1;
            border-radius: 4px;
        }

        .dropdown--active:before, .nav-link:hover:before {
            opacity: 1;
        }
        .nav-link:hover {
            color: var(--text-color);
        }
        .nav {
            float: right;
            position: static;
            opacity: 1 !important;
            transform: none !important;
            width: auto;
            height: auto;
            transition: none;
            flex-direction: row;
            margin-left: auto;
            align-items: center;
        }
        .linkbox {
            flex-direction: row;
            margin-left: auto;
            align-items: center;
            margin-top: 0;
            background: transparent;
        }
        .headbar {
            position: absolute;
            flex-direction: row;
        }
        .sbutton {
            margin-right: 20px;
            padding-top: 0;
            padding-right: 0;
        }
        .dropdown-links {
            display: none;
            flex-direction: column;
            position: absolute;
            justify-content: center;
            right: unset;
            height: unset;
            width: max-content;
            top: 67px;
            background-color: var(--darker-color);
            z-index: 11;
            transition: unset;
        }
        .dropdown-links .nav-link {
            margin: 0;
        }
        .dropdown-links .nav-link:hover:before {
            opacity: 0;
        }
        .dropdown-links .nav-link:hover {
            background-color: #ddd;
        }
        .left-arrow {
            display: none;
        }
        .dropdown-down {
            display: block;
        }
        .dropdown-right {
            display: none;
        }
        .dropdown--active .dropdown-links {
            display: flex;
            left: 50%;
            transform: translate(-50%, 0);
        }
        .dropdown--active .dropdown-left {
            display: none;
        }
        .dropdown--active .dropdown-up {
            display: block;
        }
        .dropdown--active .dropdown-down {
            display: none;
        }
    }
</style>
