---
import '../styles/global.css';
import logo from '../assets/astro.svg';
import mask from '../assets/sprite-mask.png';

type link = {
    href: string;
    ariaLabel: string;
    label: string;
};

const links: link[] = [
    { href: '/', ariaLabel: 'home', label: 'Home' },
    { href: '/about', ariaLabel: 'about', label: 'About' },
    { href: '/tinnitus', ariaLabel: 'tinnitus', label: 'Tinnitus' },
    { href: '/stories', ariaLabel: 'stories', label: 'Stories' },
    { href: '/services', ariaLabel: 'services', label: 'Services' },
    { href: '/specialists', ariaLabel: 'specialists', label: 'Specialists' },
    { href: '/learn', ariaLabel: 'learn', label: 'Learn' }
];

const current = Astro.url.pathname;
---

<nav>
    <div class="headbar">
        <div class="logobox">
            <a href="/">
                <img src={logo.src} class="logo" alt="MovieRouterLogo" />
            </a>
            <a href="/" style={{ color: 'var(--text-color)' }}>
                <h1 class="caveat">ENT Clinic</h1>
            </a>
        </div>
        <a class="nav-trigger" href="#" aria-label="Toggle navigation"><span class="nav-icon"></span></a>
        <nav class="nav">
            <div class="linkbox">
                {links.map(link => (
                    <a class={link.href == current ? "nav-link active-link" : "nav-link"} href={link.href} aria-label={link.ariaLabel}>{link.label}</a>
                ))}
            </div>
            <div class="button-container">
                <span class="mas">Book Now</span>
                <a href="/contact" style={
                    `mask: url(${mask.src});
                    -webkit-mask: url(${mask.src})
                    mask-size: 3000% 100%;
                    -webkit-mask-size: 3000% 100%;`
                }>Book Now</a>
            </div>
        </nav>
    </div>
</nav>

<script>
    const trigger = document.querySelector('.nav-trigger');
    trigger?.addEventListener('click', () => {
        document.body.classList.toggle('nav--active');
    });
</script>

<style>

    .headbar {
        position: fixed;
        flex-direction: column;
        left: 0;
        right: 0;
        top: 0;
        width: 100vw;
        width: 100dvw;
        font-family: Arial, Helvetica, sans-serif;
        display: flex;
        background-color: var(--darker-color);
        color: var(--text-color);
        z-index: 150;
    }
    svg {
        position: absolute;
    }
    .logobox {
        display: flex;
        white-space: nowrap;
    }

    .logo {
        height: 4em;
        padding: 1em;
        will-change: filter;
        transition: filter 300ms;
    }
    .logo:hover {
        filter: drop-shadow(0 0 2em #646cffaa);
    }
    
    .linkbox {
        display: flex;
        flex-direction: column;
        margin-top: 102.5px;
        background: linear-gradient(45deg, #ff0000, #ff7300, #fffb00, #48ff00, #00ffd5, #002bff, #7a00ff, #ff00c8, #ff0000);
        animation: glowing 20s linear infinite;
        background-size: 400%;
    }

    /* https://codepen.io/adubiel/pen/yyWEVo */
    .nav {
        font-size:1.3em;
        display: flex;
        flex-direction: column;
        position: fixed;
        width:100%;
        transform: translateX(100%);
        transition: all var(--duration) var(--ease);
    }

    .nav-link {
        text-decoration: none;
        padding-left: 20px;
        background-color: var(--nav-bg-active);
        transition: background-color .3s ease-in-out;
    }
    .nav-link:hover {
        background-color: transparent;
        color: var(--darker-color);
    }
    @keyframes glowing {
        0% { background-position: 400% 0; }
        100% { background-position: 0 0; }
    }
    .nav-trigger {
        display:block;
        position:absolute;
        width:30px;
        height:25px;
        right:10px;
        top:10px;
        z-index:1000; 
    }

    .nav-icon {
        display: inline-block;
        position: relative;
        width:30px;
        height:5px;
        background-color: var(--nav-color);
        transition-property: background-color, transform;
        transition-duration: var(--duration);
    }
    .nav-icon::before, .nav-icon::after {
        content: '';
        position: absolute;
        left: 0;
        width: 30px;
        height: 5px;
        background-color: var(--nav-color);
        transition: margin var(--duration), transform var(--duration);
    }

    .nav-icon::before {
        margin-top: -10px;
    }

    .nav-icon::after {
        margin-top: 10px;
    }
    body.nav--active .nav-icon {
        background: hsla(0,0%,0%,0);
    }
        
    body.nav--active .nav-icon::before {
        margin-top: 0;
        transform: rotate(45deg);hsla(0,0%,100%,1);
        background: hsla(0,0%,0%,1);
    }

    body.nav--active .nav-icon::after {
        margin-top: 0;
        transform: rotate(-45deg);
        background: hsla(0,0%,0%,1);
    }

    body.nav--active .nav {
        transform: translateX(59%);  
    }

    /* https://codepen.io/pizza3/pen/qmerBv */
    .button-container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 31.2px; 
        position: relative;
        overflow: hidden;
        border: 1px solid #000;
        transition: 0.5s;
        margin-right: auto;
        padding: 3px 0px;
        background: linear-gradient(45deg, #ff0000, #ff7300, #fffb00, #48ff00, #00ffd5, #002bff, #7a00ff, #ff00c8, #ff0000);
        background-size: 400%;
        animation: glowing 20s linear infinite;
        margin-top: 20px;
    }

    .button-container a {
        width: 101%;
        height: 100%;
        background: #000;
        border: none;
        color: #fff;
        cursor: pointer;
        animation: ani2 0.7s steps(29) forwards;
        padding: 23px;
    }

    .button-container a:hover {
        animation: ani 0.7s steps(29) forwards;
    }
    .mas {
        position: absolute;
        color: var(--darker-color);
        text-align: center;
        width: 101%;
        overflow: hidden;
    }

    @-webkit-keyframes ani {
        from {
        -webkit-mask-position: 0 0;
        mask-position: 0 0;
        }

        to {
        -webkit-mask-position: 100% 0;
        mask-position: 100% 0;
        }
    }

    @keyframes ani {
        from {
        -webkit-mask-position: 0 0;
        mask-position: 0 0;
        }

        to {
        -webkit-mask-position: 100% 0;
        mask-position: 100% 0;
        }
    }

    @-webkit-keyframes ani2 {
        from {
        -webkit-mask-position: 100% 0;
        mask-position: 100% 0;
        }

        to {
        -webkit-mask-position: 0 0;
        mask-position: 0 0;
        }
    }

    @keyframes ani2 {
        from {
        -webkit-mask-position: 100% 0;
        mask-position: 100% 0;
        }

        to {
        -webkit-mask-position: 0 0;
        mask-position: 0 0;
        }
    }

    @media (min-width: 768px) {
        .warning {
            display: block;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }
        .nav-trigger {
            display: none;
        }
        .nav-link {
            position: relative;
            color: var(--text-color);
            padding-left: 10px;
            padding-right: 10px;
            padding-top: 3px;
            padding-bottom: 3px;
            margin-right: 10px;
            background: none;
        }
        .nav-link:before {
            content: '';
            background: linear-gradient(45deg, #ff0000, #ff7300, #fffb00, #48ff00, #00ffd5, #002bff, #7a00ff, #ff00c8, #ff0000);
            position: absolute;
            top: -2px;
            left:-2px;
            background-size: 400%;
            z-index: -1;
            filter: blur(5px);
            width: calc(100% + 6px);
            height: calc(100% + 6px);
            animation: glowing 20s linear infinite;
            opacity: 0;
            transition: opacity .3s ease-in-out;
            border-radius: 4px;
        }
        .nav-link:after {
            z-index: -1;
            position: absolute;
            content: '';
            width: 100%;
            height: 100%;
            left: 0;
            top: 0;
            background: var(--darker-color);
            border-radius: 4px;
            /*box-sizing: border-box;
            border: 1px solid hsla(0,0%,0%,1);
        }
        .active-link:after {
            border: 2px solid blue;*/
        }
        .nav-link:active {
            color: #fff;
        }
        .nav-link:active:after {
            background: transparent;
            border: 1px solid transparent;
        }
        .nav-link:hover:before {
            opacity: 1;
        }
        .nav-link:hover {
            color: var(--text-color);
        }
        .nav {
            float: right;
            position: static;
            opacity: 1 !important;
            transform: none !important;
            width: auto;
            height: auto;
            transition: none;
            flex-direction: row;
            margin-left: auto;
            align-items: center;
        }
        .linkbox {
            flex-direction: row;
            margin-left: auto;
            align-items: center;
            margin-top: 0;
            background: transparent;
        }
        .headbar {
            position: absolute;
            flex-direction: row;
        }
        .button-container {
            margin-right: 20px;
            margin-top: 0;
        }
    }
</style>
