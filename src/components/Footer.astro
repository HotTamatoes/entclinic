---
import '../styles/global.css';
import './Navbar.astro';
import Stylishbutton from './Stylishbutton.astro';
---
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

<footer>
    <div class="footerbar">
        <div class="address">
            <span>1234 Tamaki Drive</span>
            <span>Auckland, New Zealand</span>
            <span>1010</span>
            <a href="https://testent.movie-router.com"> Website </a>
            <span>+64 155 555 5678</span>
        </div>
        <div class="footerLinks">
            <div class="policySection">
                <a href="/privacy-policy">Privacy Policy</a>
                <a href="/terms-of-service">Terms of Service</a>
                <a href="/faq">FAQs</a>
            </div>
            <div class="buttons">
                <Stylishbutton text="Contact Us" />
                <Stylishbutton text="Review Us" />
            </div>
            <div class="socials">
                <a href="#" class="icon-bubble facebook">
                    <i class="fab fa-facebook-f icon"></i>
                </a>
                <a href="#" class="icon-bubble twitter">
                    <i class="fab fa-twitter icon"></i>
                </a>
                <a href="#" class="icon-bubble bluesky">
                    <i class="fab fa-bluesky icon"></i>
                </a>
            </div>
        </div>
    </div>
</footer>

<style>
    .footerbar {
        background-color: var(--footer-bg);
        color: var(--footer-color);
        display: flex;
        flex-direction: column;
        min-height: 350px;
        align-items: center;
        justify-content: space-between;
        box-sizing: border-box;
        padding: 3rem 3rem;
    }

    .address {
        display: flex;
        flex-direction: column;
        margin-right: auto;
    }
    .footerLinks {
        display: flex;
        flex-direction: column;
        justify-content: right;
        margin-left: auto;
    }

    .policySection {
        display: flex;
        flex-direction: column;
        justify-content: right;
        text-align: right;
    }
    .buttons {
        display: flex;
        flex-direction: column;
        margin-left: auto;
        margin-top: 20px;
        margin-bottom: 20px;
        gap: 20px;
        line-height: 2rem;
    }
    .socials {
        margin-top: 15px;
    }

    /* https://codepen.io/ephs23/pen/NeQZGx */
    .icon-bubble {
        width: 40px;
        height: 40px;
        background-color: #bbb;
        text-align: center;
        line-height: 38px;
        font-size: 25px;
        margin: 0 10px;
        display: inline-block;
        border-radius: 50%;
        position: relative;
        overflow: hidden;
        border: 3px solid #bbb;
        z-index: 1;
    }

    .icon-bubble .icon {
        position: relative;
        color: var(--footer-bg);
        transition: 0.5s;
        z-index: 3;
    }

    .icon-bubble:hover .icon {
        color: var(--footer-bg);
    }

    .icon-bubble:before {
        content: "";
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        height: 100%;
        transition: .5s;
        z-index: 2;
    }

    .icon-bubble.facebook:before { background: #1877f2; }
    .icon-bubble.twitter:before  { background: #1da1f2; }
    .icon-bubble.bluesky:before  { background: #0285ff; }

    .icon-bubble:hover:before {
        top: 0;
    }

    @media (min-width: 768px) {
        .footerbar {
            flex-direction: row;
            padding: 0 8rem;
            min-height: 350px;
        }
    }

</style>
