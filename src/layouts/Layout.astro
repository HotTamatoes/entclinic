---
import Nav from "../components/Navbar.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>ENT Clinic</title>
	</head>
	<body>
		<Nav />
		<main class="page">
			<div class="inactive-box"></div>
			<div class="page-content">
				<slot />
			</div>
		</main>
	</body>
</html>

<script>
    const inactiveBox = document.querySelector('.inactive-box');
	inactiveBox?.addEventListener('click', () => {
        document.body.classList.remove('nav--active');
	})
</script>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		background-color: var(--nav-bg-active);
		display: flex;
		place-items: center;
	}
    .page {
		margin-top: 96px;
        transform: scale(1) translateX(0);
        transition: all var(--duration) var(--ease);
		background-color: var(--primary-color);
		width: 100dvw;
		height: calc(100dvh - 96px);
		position: relative;
		overflow: hidden;
    }

	.page-content {
		position: relative;
		overflow: auto;
		height: 100%;
		width: 100%;
	}

    body.nav--active .page {
        transform: scale(0.9) translateX(-40%);
    }

	.inactive-box {
		position: absolute;
		inset: 0;
		display: none;
		background-color: transparent;
		z-index: 10;
	}

	body.nav--active .inactive-box {
		display: block;
	}
</style>
